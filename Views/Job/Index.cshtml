@model List<TechJobPortal.Models.JobListing>

    <h2>Job Listings</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Company</th>
                <th>Location</th>
                <th>Job Type</th>
                <th>Posted Date</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Job" asp-action="Details" asp-route-id="@job.Id">
                        @job.Title
                    </a>
                </td>
                <td>@job.CompanyName</td>
                <td>@job.Location</td>
                <td>@job.JobType</td>
                <td>Posted on: @job.PostedDate.ToString("MMM dd, yyyy")</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-controller="Job" asp-action="Details" asp-route-id="@job.Id">View</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
